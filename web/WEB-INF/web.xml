<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- JDBC DataSource -->
    <resource-ref>
        <description>
            Resource reference to Database.
        </description>
        <res-ref-name>
            jdbc/WebDemo
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>
    
    <!-- Web servlets -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class> by.bsac.contoller.RegistrationServlet</servlet-class>
    </servlet>
    
    <!-- Web filters -->
    <filter>
        <filter-name>NameFinder</filter-name>
        <filter-class> by.bsac.contoller.filtres.authentication.NameFinder </filter-class>
    </filter>
    
    <!-- Web servlet mappings -->
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    
    <!-- Web filters mapping -->
    <filter-mapping>
        <filter-name>NameFinder</filter-name>
        <servlet-name>RegistrationServlet</servlet-name>
    </filter-mapping>


</web-app>